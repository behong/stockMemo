generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Record {
  id                Int      @id @default(autoincrement())
  date              String
  time              String
  kospiIndividual   Float
  kospiForeign      Float
  kospiInstitution  Float
  kospiIndividualQty   Float    @default(0)
  kospiForeignQty      Float    @default(0)
  kospiInstitutionQty  Float    @default(0)
  kospiChangePct    Float
  kosdaqIndividual  Float
  kosdaqForeign     Float
  kosdaqInstitution Float
  kosdaqIndividualQty  Float    @default(0)
  kosdaqForeignQty     Float    @default(0)
  kosdaqInstitutionQty Float    @default(0)
  kosdaqChangePct   Float
  nasdaqChangePct   Float
  usdkrw            Float
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([date, time])
  @@index([date])
}

model ServiceToken {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  accessToken String
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
