generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Record {
  id                Int      @id @default(autoincrement())
  date              String
  time              String
  kospiIndividual   Float
  kospiForeign      Float
  kospiInstitution  Float
  kospiChangePct    Float
  kosdaqIndividual  Float
  kosdaqForeign     Float
  kosdaqInstitution Float
  kosdaqChangePct   Float
  nasdaqChangePct   Float
  usdkrw            Float
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([date, time])
  @@index([date])
}
